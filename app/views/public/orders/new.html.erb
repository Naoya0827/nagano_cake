<h3>注文情報入力</h3>
<h3>支払い方法</h3>
<%= form_with model: @order, method: :post, url: public_orders_path, local: true do |f| %>
 <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
 <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

 <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
 <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>

<h3>お届け先</h3>
 <%= f.radio_button :address_number, 1 %>
 <%= f.label :address_number_1, "ご自身の住所" %>
 〒<%= current_customer.postal_code %><%= current_customer.address %>
 <%= current_customer.last_name %><%= current_customer.first_name %><br>

 <%= f.radio_button :address_number, 2 %>
 <%= f.label :address_number_2, "登録先住所から選択" %>
 <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses.all, :id, :full_address) %><br>

 <%= f.radio_button :address_number, 3 %>
 <%= f.label :address_number_3, "新しいお届け先" %><br>
 <%= f.label :郵便番号（ハイフンなし） %>
 <%= f.text_field :delivery_postal_code %><br>
 <%= f.label :住所 %>
 <%= f.text_field :delivery_address %><br>
 <%= f.label :宛名 %>
 <%= f.text_field :delivery_name %><br>

 <%= f.submit "確認画面へ進む" %>
<% end %>
