<h3>注文情報確認</h3>
<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
<tbody>
  <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
       <%= attachment_image_tag cart_item.item, :image, "50x50" %>
       <%= cart_item.item.name %>
      </td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal %></td>
    </tr>
    <% @total_price += cart_item.subtotal %>
  <% end %>
  </tbody>
</table>
<table class="table">
  <tr>
    <td>送料</td>
    <td>800</td>
  </tr>
  <tr>
    <td>商品合計</td>
    <td><%= @total_price %></td>
  </tr>
  <tr>
    <td>請求金額</td>
    <td><%= @total_price + 800 %></td>
  </tr>
</table>

<h3>支払い方法</h3>
<%= @order.payment_method_i18n %>
