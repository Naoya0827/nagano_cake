<div class="row">
  <h4><div class="public-title">ログイン</div></h4>
</div>
<div class="row">
  <h6><div class="public-title-b mb-3 ml-5">会員の方はこちらからログイン</div></h6>
</div>


<%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
<div class="row">
  <div class="col-6 offset-1">
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td>メールアドレス</td>
          <td> <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com", class:"col-12" %></td>
        </tr>
        <tr>
          <td>パスワード</td>
          <td> <%= f.password_field :password, autocomplete: "current-password", class:"col-12" %></td>
        </tr>
        <tr>
          <td></td>
          <td> <%= f.submit "ログイン", class:"btn btn-primary w-120px" %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<% end %>


<div class="row">
  <h6><div class="public-title-b mb-3 ml-5">会員登録がお済みでない方</div></h6>
</div>
<div class="row">
  <div class="offset-2 col-8">
    <ins><%= link_to "こちら", new_customer_registration_path %></ins>から新規登録を行なってくださいください。
  </div>
</div>



