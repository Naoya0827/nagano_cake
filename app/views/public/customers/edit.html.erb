<h2>会員情報編集</h2>
<%= form_with model:@customer, method: :patch, url: public_customer_path(@customer.id), local:true do |f| %>
 <%= f.label :氏名 %>
 <%= f.text_field :last_name %>
 <%= f.text_field :first_name %><br>
 <%= f.label :フリガナ %>
 <%= f.text_field :last_name_kana %>
 <%= f.text_field :first_name_kana %><br>
 <%= f.label :郵便番号 %>
 <%= f.text_field :postal_code %><br>
 <%= f.label :住所 %>
 <%= f.text_field :address %><br>
 <%= f.label :電話番号 %>
 <%= f.text_field :telephone_number %><br>
 <%= f.label :メールアドレス %>
 <%= f.email_field :email %>
 <%= f.submit "編集内容を保存" %>
 <% end %>