<h3>注文履歴詳細</h3>
<table class="table">
  <tbody>
    <tr>
      <td>購入者</td>
      <td>
       <%= link_to admin_customer_path(@order.customer) do %>
       <%= @order.customer.last_name %>
       <%= @order.customer.first_name %>
       <% end %>
      </td>
    </tr>
    <tr>
      <td>注文日</td>
      <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td>
        〒<%= @order.delivery_postal_code %><%= @order.delivery_address %><br>
        <%= @order.delivery_name %>
      </td>
    </tr>
    <tr>
      <td>支払方法</td>
      <td><%= @order.payment_method %></td>
    </tr>
    <tr>
      <td>注文ステータス</td>
      <td>
        <%= form_with model: @order, method: :patch, url: "/admin/orders/#{@order.id}", local: true do |f| %>
        <%= f.select :status, [["入金待ち","入金待ち"],["入金確認","入金確認"],["製作中","製作中"],["発送準備中","発送準備中"],["発送済み","発送済み"]] %>
        <%= f.submit "更新" %>
        <% end %>
        </td>
    </tr>
  </tbody>
</table>

<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.item.with_tax_price %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.amount * (order_detail.item.with_tax_price) %></td>
      <td>
        <%= form_with model: @order_detail, method: :patch, local: true do |f| %>
         <%= f.select :making_status, [["着手不可","着手不可"],["製作待ち","製作待ち"],["製作中","製作中"],["製作完了","製作完了"]] %>
         <%= f.submit "更新" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>