<div class="row">
 <h4><div class="admin-title">商品編集</div></h4>
</div>
<div class="row d-flex justify-content-center">
  <%= form_with model:@item,method: :patch, url: admin_item_path, local: true do |f| %>
 <table class="new-form-table">
  <tbody>
   <tr>
    <td><%= f.label :商品画像 %></td>
    <td><%= f.attachment_field :image %></td>
   </tr>
   <tr>
    <td><%= f.label :商品名 %></td>
    <td><%= f.text_field :name %></td>
   </tr>
   <tr>
    <td><%= f.label :商品説明 %></td>
    <td><%= f.text_area :introduction %></td>
   </tr>
   <tr>
    <td><%= f.label :ジャンル %></td>
    <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
   </tr>
   <tr>
    <td><%= f.label :税抜価格 %></td>
    <td><%= f.text_field :price %><span>円</span></td>
   </tr>
   <tr>
    <td><%= f.label :販売ステータス %></td>
    <td>
     <%= f.radio_button :is_active, true, checked: true %>
     <%= f.label :is_active, "販売中", value: true %>
     <%= f.radio_button :is_active, false %>
     <%= f.label :is_active, "販売停止中", value: false %>
    </td>
   </tr>
   </tbody>
  </table>
  <div class="row d-flex justify-content-center">
   <%= f.submit :"変更を保存", class: "btn btn-success w-120px mt-3" %>
  </div>
  <% end %>
</div>