<h2>商品新規登録</h2>
<%= form_with model: @item, local:true do |f| %>
 <%= f.label :商品画像 %>
 <%= f.attachment_field :image %><br>
 <%= f.label :商品名 %>
 <%= f.text_field :name %><br>
 <%= f.lebel :商品説明 %>
 <%= f.text_area :introduction %><br>
 <%= f.label :ジャンル %>
 <%= f.collection_select :genre_id, Genre.all, :name %><br>
 <%= f.label :税抜価格 %>
 <%= f.text_field :price %>円<br>
 <%= f.label :販売ステータス %>
 <%= f.radio_button :is_active, "販売中", {value: :true}, checked: true %>
 <%= f.radio_button :is_active, "販売停止中", {value: :false} %><br>
 <%= f.submit :新規登録 %>
<% end %>