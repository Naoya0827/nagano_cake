<div class="row">
 <h4><div class="admin-title-b">商品一覧</div></h4>
 <%= link_to "+", new_admin_item_path, class: "btn btn-lg rounded-circle text-right ml-auto my-3 shadow-lg"%>
</div>
<div class="row">
 <table class="table">
  <thead>
    <tr class="table-color">
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><ins><%= link_to item.name, admin_item_path(item), class:"text-dark" %></ins></td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <td>
       <% if item.is_active == true %>
        <div class="text-success">販売中</div>
       <% else %>
        販売停止中
       <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
 </table>
</div>
<div class="row">
 <%= paginate @items %>
</div>