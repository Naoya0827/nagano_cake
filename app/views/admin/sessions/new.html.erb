<div class="row">
  <h4><div class="admin-title">管理者ログイン</div></h4>
</div>

<div class="row d-flex justify-content-center">
  <%= form_with model: @admin, url:admin_session_path, local: true do |f| %>
  <div class="">
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", :size => "30*30" %></td>
        </tr>
        <tr>
          <td>パスワード</td>
          <td><%= f.password_field :password, :size => "30*30" %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="row d-flex justify-content-center">
    <%= f.submit "ログイン", class:"btn btn-primary w-120px" %>
  </div>
<% end %>
</div>

