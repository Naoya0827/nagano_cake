<h2>ジャンル一覧・追加</h2>
<%= form_with model: @genre, url:admin_genres_path, local:true do |f| %>
 <%= f.label :ジャンル名 %>
 <%= f.text_field :name, placeholder: "ジャンル名" %>
 <%= f.submit "新規登録" %>
<% end %>

<table class="table table-hover">
 <thead>
  <tr>
   <th>ジャンル</th>
   <th></th>
  </tr>
 </thead>
 <tbody>
  <% @genres.each do |genre| %>
  <tr>
   <td><%= genre.name %></td>
   <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
  </tr>
 </tbody>
 <% end %>
</table>